{
  "extends": ["@tsconfig/strictest/tsconfig.json"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "erasableSyntaxOnly": true
  },
  "include": [".github/**/*", "bench/**/*", "src/**/*", "*"]
}
